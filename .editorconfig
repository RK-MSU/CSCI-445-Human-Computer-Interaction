# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,js,css,html,json,less,xml}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.txt]
indent_style = space
indent_size = 4

[{*.{rst,rb,yml},package.json}]
indent_style = space
indent_size = 2
